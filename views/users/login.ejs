<% layout("layouts/boilerplate") %>

<body>
    <h1 class="col-6 offset-3">Login to Wanderlust</h1>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/listings/users/login" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label"></label>
                    <input name="username" placeholder="username" type="text" class="form-control " required>
                
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label"></label>
                    <input name="password" placeholder="password" type="password" class="form-control " required>
                
                </div>
                <button class="btn btn-dark add-btn " style="background-color: green !important;">Login</button>

            </form>
        </div>
    </div> 
</body>
</html>